@model Event

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<div class="form-group">
    <label asp-for="EventName">Event Name:</label>
    <div><span asp-validation-for="EventName" class="text-danger"></span></div>
    <input asp-for="EventName" class="form-control" />
</div>


<div class="form-group">
    <label asp-for="EventDescr">Description:</label>
    <div><span asp-validation-for="EventDescr" class="text-danger"></span></div>
    <textarea asp-for="EventDescr" class="form-control"></textarea>
</div>

