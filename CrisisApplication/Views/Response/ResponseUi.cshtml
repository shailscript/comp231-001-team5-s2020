@model Response
@{
    ViewData["Title"] = "SubmitResponse";
    Layout = "_ContactLayout";
}

<form asp-action="SaveResponse" method="post">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            @{
                if (Model.Email != "")
                {
                    <input type="email" asp-for="Email" class="form-control" value="@Model.Email">
                }
                else
                {
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                }
            }

        </div>
    </div>
    <fieldset class="form-group">
        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0" >Status</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    @Html.RadioButton("Status", "Safe") Safe
                   
                </div>
                <div class="form-check">
                    @Html.RadioButton("Status", "Not Safe") Not Safe
                   
                </div>
            </div>
        </div>
    </fieldset>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" asp-action="SaveResponse" asp-controller="Response">Submit</button>
        </div>
    </div>
</form>